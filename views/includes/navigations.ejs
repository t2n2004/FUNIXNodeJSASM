<div class="backdrop"></div>

<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/home' ? 'active' : '' %>" href="/">Trang chủ</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/time-log' ? 'active' : '' %>" href="/time-log">Chấm công</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/admin/staffs' ? 'active' : '' %>" href="/admin/staffs">Danh sách nhân viên</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/admin/add-staff' ? 'active' : '' %>" href="/admin/add-staff">Thêm nhân viên
                </a>
            </li>  
        </ul>

        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/home' ? 'active' : '' %>" href="/">Trang chủ</a>
        </li>
