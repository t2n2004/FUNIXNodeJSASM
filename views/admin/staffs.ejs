<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigations.ejs') %>

    <main>
        <% if (staffs.length> 0) { %>
            <div class="grid">
                <% for (let staff of staffs) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">
                                <%= staff.name %>
                            </h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= staff.imageUrl %>" alt="<%= staff.name %>">
                        </div>
                        <div class="card__content">
                            <p>
                                <%= staff.department %>
                            </p>
                        </div>

                        <div class="card__actions">
                            <a href="/admin/edit-staff/<%= staff._id %>?edit=true" class="btn">Edit</a>
                            <form action="/admin/delete-staff" method="POST">
                                <input type="hidden" value="<%= staff._id %>" name="staffId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>

                    </article>
                    <% } %>
            </div>
            <% } else { %>
                <h1>No Staffs Found!</h1>
                <% } %>
    </main>
</body>

<%- include('../includes/end.ejs') %>